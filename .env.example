# App
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_GSC_VERIFICATION=

# Database (Supabase Postgres)
# Pooled connection (recommended for serverless):
POSTGRES_URL=postgres://postgres:password@aws-1-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require
# Direct connection (non-pooling):
POSTGRES_URL_NON_POOLING=postgres://postgres:password@db.PROJECT_REF.supabase.co:5432/postgres?sslmode=require
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DATABASE=postgres

# Supabase (optional for future RLS/edge features)
SUPABASE_URL=https://PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend Email Client
RESEND_API_KEY=your_resend_api_key

